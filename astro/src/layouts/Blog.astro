---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full">
		<header class="h-20 p-8">
			<a href="/" class="logo">
				<img src="logo-black.svg" />
			</a>
		</header>		
		<main class="mx-auto  px-8">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	h1 {
		font-size: 40px;
		font-style: normal;
		font-weight: 700;
		line-height: 65px;
	}

</style>
